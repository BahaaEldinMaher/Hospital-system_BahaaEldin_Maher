<div class="container">
	{# this is the TABLE code #}
	<table class="table table-striped">
		<thead>
			<tr>
				<td>ID</td>
				<td>Hospital name</td>
				<td>Hospital location</td>
				<td></td>
				<td></td>
			</tr>
		</thead>

		<tbody>
			<!-- the "rows" var came from hospitals.js file, around line 13 -->
			{% for row in rows %}
			<tr>
				<td>{{ row.hos_no }}</td>
				<td>
					{{ row.hos_name }}
				</td>
				<td>{{ row.hos_loc }}</td>
				<td>
					<a class="btn btn-info btn-sm" href="/rooms/{{ row.hos_no }}"> 
						Add Room To This Hospital
					</a>
				</td>
				<td>
					<form method="POST" action="/hospitals/delete/{{row.hos_no}}">
						<button class="btn btn-info btn-danger"> 
							Delete
						</button>
					</form>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <br /> just to make some spacing between the table and the form #}
	<br />
	<br />

	{# this is the FORM (all inputs that the user will fill) code #}
	<form method="POST">
		<div class="mb-3">

		</div>
		<div class="mb-3">
				<label class="form-label">Hospital Name</label>
				<input class="form-control" name="hos_name" placeholder="Hospital Name" autocomplete="off"/>
		</div>
			<div class="mb-3">	
			<label class="form-label">Hospital Location</label>	
			<input class="form-control" name="hos_loc" placeholder="Hospital Location" autocomplete="off"/>
		</div>
		<br />
		<button class="btn btn-primary">Send</button>
	</form>
</div>